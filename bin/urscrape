import os
import sys
bindir = os.path.dirname(os.path.abspath(__file__))
pbindir = os.path.dirname(bindir)
if bindir not in sys.path:
    sys.path.insert(1, bindir)
if pbindir not in sys.path:
    sys.path.insert(1, pbindir)

from urscrape import urscrape
from urscrape import urutil

import argparse
import importlib

parser = urutil.get_parser(description='Spider and Scrape')
urutil.add_standard_arguments(parser, '1.0')
parser.add_argument('config', nargs=1, help='configuration file')
args = parser.parse_args()

mod = importlib.import_module(args.config[0])
#print('{0}'.format(mod))

#print(mod.__dict__)

s = mod.Scraper()
s.loglevel(args.verbose, args.debug)
s.scrape()
s.fatal('Exiting')
